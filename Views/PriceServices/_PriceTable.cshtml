@model List<adAdgenstvo.Models.DataBaseModels.PriceService>

<table class="table">
    <thead>
        <tr>
            <th>
                Название
            </th>
            <th>
                Цена
            </th>
            <th>
                Количество
            </th>
            <th>
                Время
            </th>
            <th>
                Услуга
            </th>
            <th>
                Действия
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr data-price-service-id="@item.Id">
                <td>
                    @item.Name
                </td>
                <td>
                    @item.Price
                </td>
                <td>
                    @item.Count
                </td>
                <td>
                    @item.TimeToProduce
                </td>
                <td>
                    @item.Service.Name, id={@item.ServiceId}
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Редактировать/Информация</a>
                    <button class="btn btn-danger" onclick="deletePriceService(@item.Id)">Удалить</button>
                </td>
            </tr>
        }
    </tbody>
</table>
