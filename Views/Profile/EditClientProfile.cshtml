@model adAdgenstvo.Models.Client

<h2>Редактирование профиля клиента</h2>

<form asp-action="EditClientProfile" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Name">Имя:</label>
        <input asp-for="Name" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Patronymic">Отчество:</label>
        <input asp-for="Patronymic" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Surname">Фамилия:</label>
        <input asp-for="Surname" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="PhoneNumber">Номер телефона:</label>
        <input asp-for="PhoneNumber" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Password">Пароль:</label>
        <input asp-for="Password" class="form-control" value=""/>
    </div>

    <div class="form-group">
        <label asp-for="NameCompany">Название компании:</label>
        <input asp-for="NameCompany" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Login">Логин:</label>
        <input asp-for="Login" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Inn">ИНН:</label>
        <input asp-for="Inn" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Email">Email:</label>
        <input asp-for="Email" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Сохранить изменения</button>
</form>
