@model adAdgenstvo.Models.Order

<h2>Спор о заказе №@Model.Id</h2>

<form asp-action="DisputeOrder" method="post">
    <div class="form-group">
        <label for="DebateText">Текст спора:</label>
        <textarea id="DebateText" name="debateText" class="form-control" required></textarea>
    </div>

    <input type="hidden" name="orderId" value="@Model.Id" />

    <button type="submit" class="btn btn-warning">Спорить</button>
</form>
