@model List<adAdgenstvo.Models.Order>

<h2>Заказы с контрактами</h2>

<table class="table">
    <thead>
        <tr>
            <th>Id заказа</th>
            <th>Дедлайн</th>
            <th>Дата обращения</th>
            <th>Статус</th>
            @if (User.IsInRole("client"))
            {
                <th>Действия</th>
            }
            else
            {
                <th>Агент</th>
                <th>Клиент</th>
            }
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.Id</td>
                <td>@order.Deadline.ToShortDateString()</td>
                <td>@order.DateCreate.Value.ToShortDateString()</td>
                <td>@order.Status</td>
                @if (User.IsInRole("client"))
                {
                    <td>
                        @if (!order.Status.Equals("canceled", StringComparison.OrdinalIgnoreCase))
                        {
                            <a href="@Url.Action("DebateOrder", "Profile", new { orderId = order.Id })" class="btn btn-primary">Спорить</a>
                            <button class="btn btn-success">Оплатить</button>
                            <button class="btn btn-info">Посмотреть работу</button>
                            <a href="@Url.Action("CancelOrder", "Profile", new { orderId = order.Id })" class="btn btn-danger">Отменить</a>
                            <button class="btn btn-info">Закрыть рекламу</button>
                        }

                    </td>
                }
                else
                {
                    <td>@order.AgentId</td>
                    <td>@order.ClientId</td>
                }
            </tr>
        }
    </tbody>
</table>
